    <filter>
        <filter-name>DispatcherFilter</filter-name>
        <filter-class>filter.DispatcherFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>filter.LoginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>sitemesh</filter-name>
        <filter-class>com.opensymphony.module.sitemesh.filter.PageFilter</filter-class>
    </filter>
    <filter>
        <filter-name>RegisterFilter</filter-name>
        <filter-class>filter.RegisterFilter</filter-class>
    </filter>
    <filter>
        <filter-name>DetailsGameFilter</filter-name>
        <filter-class>filter.DetailsGameFilter</filter-class>
    </filter>
    <filter>
        <filter-name>WelcomePageFilter</filter-name>
        <filter-class>filter.WelcomePageFilter</filter-class>
    </filter>
    <filter>
        <filter-name>OrderListPageFilter</filter-name>
